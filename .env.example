# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_BOT_USERNAME=your_bot_username

# Authorization Configuration - Role-Based Access Control
# Role hierarchy: admin > coordinator > viewer
TELEGRAM_ADMIN_IDS=123456789,987654321,555666777
TELEGRAM_COORDINATOR_IDS=444444444,555555555
TELEGRAM_VIEWER_IDS=111111111,222222222,333333333
TELEGRAM_CONVERSATION_TIMEOUT_MINUTES=30  # Timeout in minutes (1-1440, default: 30)
TELEGRAM_REQUEST_CONNECT_TIMEOUT=5.0      # Seconds (default: 5.0)
TELEGRAM_REQUEST_READ_TIMEOUT=20.0        # Seconds (default: 20.0)
TELEGRAM_REQUEST_WRITE_TIMEOUT=5.0        # Seconds (default: 5.0)
TELEGRAM_REQUEST_POOL_TIMEOUT=5.0         # Seconds (default: 5.0)
TELEGRAM_REQUEST_CONNECTION_POOL_SIZE=10  # Total HTTP connections (default: 10)
TELEGRAM_STARTUP_RETRY_ATTEMPTS=3         # Startup retry attempts when Telegram times out
TELEGRAM_STARTUP_RETRY_DELAY_SECONDS=5.0  # Delay between startup retries in seconds

# Airtable Configuration
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_base_id_here

# Participants table (default configuration)
AIRTABLE_TABLE_NAME=Participants
AIRTABLE_TABLE_ID=your_participants_table_id_here

# BibleReaders table configuration
AIRTABLE_BIBLE_READERS_TABLE_NAME=BibleReaders
AIRTABLE_BIBLE_READERS_TABLE_ID=your_bible_readers_table_id_here

# ROE table configuration
AIRTABLE_ROE_TABLE_NAME=ROE
AIRTABLE_ROE_TABLE_ID=your_roe_table_id_here

# Schedule table configuration
AIRTABLE_SCHEDULE_TABLE_NAME=Schedule
AIRTABLE_SCHEDULE_TABLE_ID=your_schedule_table_id_here

# Claude Hooks Configuration (for notifications)
CLAUDE_HOOK_BOT_TOKEN=your_notification_bot_token_here
CLAUDE_HOOK_CHAT_ID=your_chat_id_here

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development
ENABLE_SCHEDULE_FEATURE=false  # Set to true to enable /schedule command

# Daily Statistics Notifications (Optional - disabled by default)
DAILY_STATS_ENABLED=false           # Set to true to enable daily statistics notifications
NOTIFICATION_TIME=09:00             # 24-hour format (HH:MM), e.g., 09:00, 18:30
NOTIFICATION_TIMEZONE=UTC           # Timezone for scheduling (e.g., Europe/Moscow, America/New_York)
NOTIFICATION_ADMIN_USER_ID=123456789  # Telegram user ID to receive notifications (required when enabled)

# Database Configuration (for future migrations)
# DATABASE_URL=postgresql://user:password@localhost/dbname
# DATABASE_URL=sqlite:///data/database.db
